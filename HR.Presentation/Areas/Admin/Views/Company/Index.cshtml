@using HR.Application.Features.Companies.ViewModels;
@model IEnumerable<CompanyListVM>

<style>
    .btn-primary {
        background-color: #AA2C4A;
        border-color: #F489A3;
        color: black;
    }

        .btn-primary:hover {
            background-color: #F489A3;
            border-color: #F489A3;
        }

    .btn-success {
        background-color: #F489A3;
        border-color: #AA2C4A;
        color: black;
    }

       .btn-success:hover {
        background-color: #F489A3;
            border-color: #AA2C4A;
    }
</style>
<div class="btn-group btn-md mb-3">
    <button type="button" class="btn btn-inverse-info" onclick="showCompanies('active-companies')">Aktif Şirketler</button>
    <button type="button" class="btn btn-inverse-danger" onclick="showCompanies('passive-companies')">Pasif Şirketler</button>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header">Aktif Şirketler</div>
        <table class="table table-bordered active-companies" style="display: block;">
            <thead>
                <tr>
                    <th>Logo:</th>
                    <th>Ad:</th>
                    <th>Ünvan:</th>
                    <th>Telefon:</th>
                    <th>Mail Adresi:</th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.Where(x => x.IsActive).ToList())
                {
                    <tr>
                        <td class="logo"><img src="~/photos/@company.LogoUrl"></td>
                        <td class="company-name">@company.Name</td>
                        <td class="company-type">@company.Type</td>
                        <td class="company-phone">@company.PhoneNumber</td>
                        <td class="company-email">@company.Email</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Company" asp-route-id="@company.Id" asp-action="CompanyDetail" class="btn btn-primary" >Detay</a>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Company" asp-route-id="@company.Id" asp-action="CompanyDetail" class="btn btn-success">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header">Pasif Şirketler</div>
        <table class="table table-bordered passive-companies" style="display: none;">
            <thead>
                <tr>
                    <th>Logo:</th>
                    <th>Ad:</th>
                    <th>Ünvan:</th>
                    <th>Telefon:</th>
                    <th>Mail Adresi:</th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.Where(x => x.IsActive == false).ToList())
                {
                    <tr>
                        <td class="logo"><img src="~/photos/@company.LogoUrl"></td>
                        <td class="company-name">@company.Name</td>
                        <td class="company-type">@company.Type</td>
                        <td class="company-phone">@company.PhoneNumber</td>
                        <td class="company-email">@company.Email</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Company" asp-route-id="@company.Id" asp-action="CompanyDetail" class="btn btn-primary">Detay</a>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Company" asp-route-id="@company.Id" asp-action="CompanyDetail" class="btn btn-success">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        function showCompanies(type) {
            const activeCompaniesTable = document.querySelector('.active-companies');
            const passiveCompaniesTable = document.querySelector('.passive-companies');

            activeCompaniesTable.style.display = type === 'active-companies' ? 'block' : 'none';
            passiveCompaniesTable.style.display = type === 'passive-companies' ? 'block' : 'none';
        }
    </script>
}
