@using HR.Application.Features.People.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PersonDetailVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .btn-primary {
        background-color: #AA2C4A;
        border-color: #F489A3;
        color: black;
    }

        .btn-primary:hover {
            background-color: #F489A3;
            border-color: #F489A3;
        }

    .btn-outline-primary {
        border-color: #F489A3;
        color: #AA2C4A;
    }

        .btn-outline-primary:hover {
            background-color: #AA2C4A;
            border-color: #F489A3;
            color: black;
        }
</style>
<section>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/photos/@Model.Photo" alt="..."
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.Name @Model.SecondName @Model.Surname @Model.SecondSurname</h5>
                        <p class="text-muted mb-1">@Model.Job.Name</p>
                        <p class="text-muted mb-4">@Model.Department.Name</p>
                        <div class="d-flex justify-content-center mb-2">
                            <a asp-action="UpdateAdmin" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-outline-primary">Güncelle</a>
                            <a asp-action="DetailAdmin" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-primary ms-1">Detay</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card mb-4 ">
                    <div class="card-body rounded-3">

                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Tam Adı</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Name @Model.SecondName @Model.Surname @Model.SecondSurname</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Kimlik Numarası</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.IdentityNumber</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Doğum Tarihi</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.BirthDate.ToString("dd.MM.yyyy")</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Doğum Yeri</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PlaceofBirth</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">E-mail</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EMail</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Telefon Numarası</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PhoneNumber</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Adres</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Address</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Çalıştığı Kurum</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.CompanyName</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">İşe Başlangıç Tarihi</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.HireDate.ToString("dd.MM.yyyy")</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

