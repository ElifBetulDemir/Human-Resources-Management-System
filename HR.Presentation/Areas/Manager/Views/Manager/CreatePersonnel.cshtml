@model HR.Application.Features.People.ViewModels.PersonCreateVM

@{
    ViewData["Title"] = "CreatePersonnel";
}

<h1>Create Personnel</h1>

<h4>PersonCreateVM</h4>
<hr />
@*<a asp-action="MailAt" asp-controller="Manager">mail</a>*@
<div class="container-fluid">
    <div class="row">
        <form asp-action="CreatePersonnel" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Photo" class="control-label">Fotoğraf</label>
                    <input asp-for="Photo" type="file" class="form-control" required />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdentityNumber" class="control-label">Identity Number:</label>
                    <input asp-for="IdentityNumber" class="form-control" required />
                    <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name:</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SecondName" class="control-label">Second Name:</label>
                    <input asp-for="SecondName" class="form-control" />
                    <span asp-validation-for="SecondName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Surname" class="control-label">Surname:</label>
                    <input asp-for="Surname" class="form-control" required />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="SecondSurname" class="control-label">Second Surname:</label>
                    <input asp-for="SecondSurname" class="form-control" />
                    <span asp-validation-for="SecondSurname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">Address:</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number:</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Gender">Cinsiyet</label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderVM>()" class="form-control custom-select"></select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label">Salary:</label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label">Birth Date:</label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PlaceofBirth" class="control-label">Place of Birth:</label>
                    <input asp-for="PlaceofBirth" class="form-control" />
                    <span asp-validation-for="PlaceofBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HireDate" class="control-label">Hire Date:</label>
                    <input asp-for="HireDate" class="form-control" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FireDate" class="control-label">Fire Date:</label>
                    <input asp-for="FireDate" class="form-control" />
                    <span asp-validation-for="FireDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobId">Meslekler</label>
                    <select asp-for="JobId" class="form-control custom-select">
                        <option value="">-- Meslek Seçin --</option>
                        @foreach (var item in Model.Jobs)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Jobs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentId">Departmanlar</label>
                    <select asp-for="DepartmentId" class="form-control custom-select">
                        <option value="">-- Departman Seçin --</option>
                        @foreach (var item in Model.Departments)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Departments" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label">Company Name:</label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
